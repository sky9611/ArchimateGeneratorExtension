<local:BaseDialogWindow x:Class="ArchimateGeneratorExtension.GenerationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArchimateGeneratorExtension"
                        xmlns:wpfx="http://schemas.xceed.com/wpf/xaml/toolkit"
                        mc:Ignorable="d" Height="380.541" Width="622.68">
    <Grid Margin="0,0,2,7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Element_type" HorizontalAlignment="Left" Margin="40,48,0,0" TextWrapping="Wrap" Text="Element type" VerticalAlignment="Top" Height="45" Width="155" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,114,0,0" TextWrapping="Wrap" Text="Group" VerticalAlignment="Top" Height="45
                   " Width="155" FontSize="18"/>
        <wpfx:CheckComboBox x:Name="Group" 
                            ItemsSource="{Binding}"
                            SelectedValue="{Binding SelectedValue}" Height="45
                            " Margin="248,114,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="322"/>
        <Button x:Name="Generate" Content="Generate" Margin="481,310,0,0" FontSize="16" Click="Generate_Click" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="89"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,179,0,0" TextWrapping="Wrap" Text="View" VerticalAlignment="Top" Height="45
                   " Width="155" FontSize="18"/>
        <wpfx:CheckComboBox x:Name="View" 
                            ItemsSource="{Binding}"
                            SelectedValue="{Binding SelectedValue}" Height="45
                            " Margin="248,179,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="322">
        </wpfx:CheckComboBox>
        <wpfx:CheckComboBox x:Name="ElementType" ItemsSource="{Binding}"
                            SelectedValue="{Binding SelectedValue}" Margin="248,48,0,0" VerticalAlignment="Top" Height="45" HorizontalAlignment="Left" Width="322"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,243,0,0" TextWrapping="Wrap" Text="Generate to projects" VerticalAlignment="Top" Height="45
                   " Width="155" FontSize="16"/>
        <wpfx:CheckComboBox x:Name="Project" 
                            ItemsSource="{Binding}"
                            SelectedValue="{Binding SelectedValue}" Height="45
                            " Margin="248,243,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="322">
        </wpfx:CheckComboBox>
    </Grid>
</local:BaseDialogWindow>